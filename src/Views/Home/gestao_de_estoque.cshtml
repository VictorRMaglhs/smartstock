@model IEnumerable<project.Models.Produto>

@{
    ViewData["Title"] = "Gestão de Estoque";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </nav>

    <div class="container mt-3">
        <div class="mb-4">
            <h4 class="text-muted">Gestão de Estoque</h4>
        </div>

        <div class="form-group">
            <input type="text" class="form-control mb-2" placeholder="Input 1" />
            <input type="text" class="form-control mb-2" placeholder="Input 2" />
        </div>

        <div class="card">
            <div class="card-body">
                @foreach (var produto in Model)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@produto.id" id="checkbox@produto.id">
                        <label class="form-check-label" for="checkbox@produto.id">
                            @produto.nome
                        </label>
                        <span class="float-right text-success" id="checkIcon@produto.id" style="display: none;">✔</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <script>
        function toggleCheckIcon(checkboxId, iconId) {
            var checkbox = document.getElementById(checkboxId);
            var icon = document.getElementById(iconId);

            if (checkbox.checked) {
                icon.style.display = 'inline';
            } else {
                icon.style.display = 'none';
            }
        }

        @foreach (var produto in Model)
        {
            <text>
                document.getElementById('checkbox@produto.id').addEventListener('change', function () {
                    toggleCheckIcon('checkbox@produto.id', 'checkIcon@produto.id');
                });
            </text>
        }
    </script>
</body>
</html>
