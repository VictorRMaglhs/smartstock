<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project.styles.css" asp-append-version="true" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</head>
<body>

    <header>
        <nav class="navbar bg-body-tertiary fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="https://amazing-wisp-a81144.netlify.app/icon1.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                    SmartStock
                </a>
            </div>
        </nav>
    </header>

    <br />
    <br />
    <br />
    <br />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="navbar bg-body-tertiary" style="
                                                      position: fixed;
                                                      bottom: 0;
                                                      left: 0;
                                                      width: 100%;
                                                      background-color: #8EACCD;
                                                      color: black;
                                                      text-align: center;
                                                      padding: 10px;
                                                      font-size: 14px;
                                                   ">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    SmartStock  -  Todos os direitos reservados
                </a>

                <section style="left: 60%;">
                    <div class="container overflow-hidden text-center">
                        @if (ViewContext.RouteData.Values["Action"].ToString() == "Index")
                        {
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-primary mx-2" href="/Home/Privacy" role="button" style="background-color: #8c52ff;">Login</a>
                                <a class="btn btn-primary mx-2" href="#" role="button" style="background-color: #8c52ff;">Sign in</a>
                            </div>
                        }
                    </div>
                </section>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
